{
	"name": "webpack-dev-server",
	"displayName": "webpack-dev-server",
	"description": "webpack-dev-server integration",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-wds.startDevServer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-wds.startDevServer",
				"title": "Start webpack-dev-server"
			},
			{
				"command": "vscode-wds.stopDevServer",
				"title": "Stop webpack-dev-server"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/read-pkg-up": "^3.0.1",
		"@types/resolve": "0.0.8",
		"@types/webpack": "^4.4.25",
		"read-pkg-up": "^4.0.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"webpack-log": "^2.0.0"
	}
}
